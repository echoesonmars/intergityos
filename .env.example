# ============================================
# IntegrityOS - Environment Configuration
# ============================================

# ============================================
# Database Configuration (Shared)
# ============================================

# MongoDB Configuration
# Used by backend (FastAPI) - frontend connects through API
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=integrity_os
MONGODB_COLLECTION=defects

USE_LOCAL_MODE=false

# ============================================
# Frontend Configuration (Next.js)
# ============================================

# AI Configuration
# OpenAI API Key for AI chat assistant
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
# Backend API base URL
API_BASE_URL=http://localhost:8000

# Environment
NODE_ENV=development

# ============================================
# Backend Configuration (FastAPI)
# ============================================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# JWT Authentication
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin Management
# Use manage_admins.py to create/list/delete admin users:
#   python manage_admins.py create username password
#   python manage_admins.py list
#   python manage_admins.py delete username
#
# Default admin will be created automatically on first startup:
#   Username: admin
#   Password: admin

# Data Processing
DATA_DIR=data
CSV_ENCODING=utf-8-sig

# Export Configuration
EXPORT_DIR=.
EXPORT_JSON=true
JSON_ENSURE_ASCII=false
